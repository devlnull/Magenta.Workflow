@model Magenta.Workflow.UseCases.InitFlowState.InitFlowStateRequest

<div class="row">
    <form action="Create" method="post">
        <div class="form-group">
            <label class="col-form-label">Name</label>
            <input name="Name" id="Name" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label class="col-form-label">Title</label>
            <input name="Title" id="Title" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label class="col-form-label">State Type</label>
            <select asp-for="StateType" asp-items="Html.GetEnumSelectList<Magenta.Workflow.Context.Structures.FlowStateTypes>()">
                <option selected="selected" value="">Please select</option>
            </select>
        </div>
        <div class="form-group">
            <label class="col-form-label">Tag</label>
            <input name="Tag" id="Tag" type="text" class="form-control" />
        </div>
        <input type="hidden" name="TypeId" id="TypeId" value="@Model.TypeId" />
        <button type="submit" class="form-control btn btn-primary"> Submit </button>
        <a asp-action="Index" asp-controller="FlowStates" asp-route-flowTypeId="@Model.TypeId" class="btn btn-link">Cancel</a>
    </form>
</div>