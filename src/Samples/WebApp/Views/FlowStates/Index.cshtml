@model IEnumerable<FlowState>

<div class="row">
    <div class="col-md-12">
        <h2>Flow States</h2>
        <div class="row">
            <div class="col-md-12">
                <a asp-action="Create" asp-route-flowTypeId="@Context.Request.Query["flowTypeId"]" class="btn btn-primary">Create a new state</a>
            </div>
        </div>
        <br />

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Title</th>
                    <th scope="col">CreatedAt</th>
                    <th scope="col">ModifiedAt</th>
                    <th scope="col">Deleted</th>
                    <th scope="col">Tag</th>
                    <th scope="col">StateType</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var stateType = (Magenta.Workflow.Context.Structures.FlowStateTypes)item.StateType;
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Title</td>
                        <td>@item.CreatedAt</td>
                        <td>@item.ModifiedAt</td>
                        <td>@item.Deleted</td>
                        <td>@item.Tag</td>
                        <td>@stateType.ToString()</td>
                        <td>
                            <a asp-action="Index" asp-controller="FlowTransitions" asp-route-flowStateId="@item.Id" class="btn btn-info">Transitions</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>